        </div>
    </section>
    <section class="container">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Product Name</th>
                    <th>Category</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Edit</th>
                </tr>
            </thead>
            <% products.forEach((entry) => { %>
            <tr ondblclick="handleUpdateProduct('<%= entry.id %>')">
                <td><%= entry.name %></td>
                <td><%= entry.category %></td>
                <td><%= entry.price %></td>
                <td><%= entry.quantity %></td>
                <td>
                    <input class="btn btn-primary" type="button" value="Edit"
                        onclick="handleUpdateProduct('<%= entry.id %>')">
                </td>
            </tr>
            <% }) %>
        </table>
        <script>
            function handleUpdateProduct(value) {
                $(location).attr('href', '/update-product/' + value);
            }
        </script>
        </section>
</body>

</html>
